<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- Dao 에서 메퍼 설정에서 필요한 엘리먼트(설정) 호출할때 식별자 역할 : 필수-->
<mapper namespace="com.bitcamp.open.member.dao.MemberDaoInter">

	<!-- select 구문일 때 사용하는 태그 -->
	<!-- 
		ID : 외부에서 해당 태그를 부를 때 사용하는 식별 이름, 메퍼 파일안에서 중복 X
		resultType : 질의의 결과를 지정하는 클래스타입의 객체에 데이터 메핑
		parameterType : 여러 데이터를 하나의 객체에 담아서 받을 때 해당 객체 타입으로 지정
	 -->
	<select id="selectById" resultType="com.bitcamp.open.member.model.Member">	
		SELECT * FROM MEMBER WHERE MEMBER_ID = #{MEMBER_ID} 		
	</select>	

	<insert id="memberInsert" parameterType="com.bitcamp.open.member.model.Member">
		insert into member (member_id, member_name, password, photo ) 
		values ( #{member_id}, #{member_name}, #{password}, #{photo} )	
	</insert>
	
	<select id="listAll" resultType="com.bitcamp.open.member.model.Member">
		<![CDATA[
		select member_id,member_name,regdate,photo 
		from member 
		]]>
	</select>
	<update id="update">
		update member set member_name=#{member_name}, photo=#{photo} 
		where member_id=#{member_id}
	</update>
	
	<delete id="delete">
		delete from openproject.member where member_id=#{member_id}
	</delete>
	
	<!-- 
	<delete id="" parameterType="">
	
	</delete>
	
	<update id="" parameterType="">
	
	</update> -->




</mapper>


